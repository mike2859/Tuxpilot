namespace Tuxpilot.Core.Entities;

/// <summary>
/// Représente un élément nettoyable du système
/// </summary>
public class CleanupElement
{
    /// <summary>
    /// Type d'élément (cache_paquets, logs_anciens, etc.)
    /// </summary>
    public string Type { get; set; } = string.Empty;
    
    /// <summary>
    /// Nom affiché de l'élément
    /// </summary>
    public string Nom { get; set; } = string.Empty;
    
    /// <summary>
    /// Chemin du fichier/dossier
    /// </summary>
    public string Chemin { get; set; } = string.Empty;
    
    /// <summary>
    /// Taille en mégaoctets
    /// </summary>
    public long TailleMB { get; set; }
    
    /// <summary>
    /// Nombre de fichiers/paquets
    /// </summary>
    public int NombreFichiers { get; set; }
    
    /// <summary>
    /// Nombre de paquets orphelins
    /// </summary>
    public int NombrePaquets { get; set; }
    
    /// <summary>
    /// Description de l'élément
    /// </summary>
    public string Description { get; set; } = string.Empty;
}