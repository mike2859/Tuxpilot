<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Tuxpilot.UI.App"
             xmlns:local="using:Tuxpilot.UI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/ButtonStyles.axaml"/>
        <StyleInclude Source="/Styles/TextStyles.axaml"/>
    </Application.Styles>
             
     <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceInclude Source="/Styles/IconResources.axaml"/>
                 <ResourceInclude Source="/Styles/IconResourcesIA.axaml"/>
                 <ResourceInclude Source="/Styles/IconResourcesAudit.axaml"/>
                 <ResourceInclude Source="/Styles/IconResourcesDashboard.axaml"/>
                 <ResourceInclude Source="/Styles/IconResourcesDiagnostic.axaml"/>
                 <ResourceInclude Source="/Styles/IconResourcesMisesAJour.axaml"/>
                 <ResourceInclude Source="/Styles/IconResourcesPlanification.axaml"/>
             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
     </Application.Resources>
</Application>