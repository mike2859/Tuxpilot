<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Tuxpilot.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Tuxpilot.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Tuxpilot"
        Width="900" Height="650"
        MinWidth="800" MinHeight="500">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

   
     <Grid ColumnDefinitions="260,*">
        
        <!-- SIDEBAR -->
        <Border Grid.Column="0" 
                Background="#FFFFFF"
                BorderBrush="#E5E7EB" 
                BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <!-- Logo et titre -->
                <StackPanel Grid.Row="0" Margin="24,20">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸ§" FontSize="32" VerticalAlignment="Center"/>
                        <TextBlock Text="Tuxpilot" 
                                  FontSize="22" 
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Assistant Linux" 
                              FontSize="12" 
                              Foreground="Gray"
                              Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Menu de navigation -->
                <StackPanel Grid.Row="1" Margin="12,20,12,0" Spacing="6">
                    
                    <Border Background="#EFF6FF"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“Š" FontSize="18"/>
                            <TextBlock Text="Vue d'ensemble" 
                                      VerticalAlignment="Center"
                                      FontWeight="SemiBold"
                                      Foreground="#3B82F6"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="Transparent"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ”„" FontSize="18" Opacity="0.5"/>
                            <TextBlock Text="Mises Ã  jour" 
                                      VerticalAlignment="Center"
                                      Foreground="#6B7280"
                                      Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="Transparent"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ§¹" FontSize="18" Opacity="0.5"/>
                            <TextBlock Text="Nettoyage" 
                                      VerticalAlignment="Center"
                                      Foreground="#6B7280"
                                      Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="Transparent"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ©º" FontSize="18" Opacity="0.5"/>
                            <TextBlock Text="Diagnostic" 
                                      VerticalAlignment="Center"
                                      Foreground="#6B7280"
                                      Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                
                <!-- Info systÃ¨me (en bas) -->
                <Border Grid.Row="2" 
                       Background="#F9FAFB" 
                       Padding="20"
                       Margin="12,12,12,20"
                       CornerRadius="8">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding InfoSysteme.Distribution}" 
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding InfoSysteme.VersionKernel}" 
                                  FontSize="11"
                                  Foreground="Gray"
                                  TextTrimming="CharacterEllipsis"/>
                        <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,4,0,0">
                            <Ellipse Width="8" Height="8" Fill="#10B981"/>
                            <TextBlock Text="SystÃ¨me en ligne" 
                                      FontSize="11"
                                      Foreground="#10B981"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
            </Grid>
        </Border>
        
        <!-- CONTENU PRINCIPAL (ton dashboard actuel) -->
        <Grid Grid.Column="1" Background="#F9FAFB">
            
            <!-- Loading indicator -->
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       IsVisible="{Binding ChargementEnCours}">
                <TextBlock Text="ðŸ§" FontSize="64" HorizontalAlignment="Center"/>
                <TextBlock Text="Chargement..." 
                          FontSize="18" 
                          Margin="0,20,0,0"
                          HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Contenu principal -->
            <ScrollViewer IsVisible="{Binding !ChargementEnCours}">
                <StackPanel Margin="40" Spacing="24">
                    
                    <!-- Header -->
                    <TextBlock Text="ðŸ“Š Vue d'ensemble" 
                              FontSize="32" 
                              FontWeight="Bold"/>
                    
                    <!-- Carte informations systÃ¨me -->
                    <Border Background="White"
                            CornerRadius="16"
                            Padding="32"
                            IsVisible="{Binding InfoSysteme, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="20">
                            
                            <TextBlock Text="Informations systÃ¨me" 
                                      FontSize="20" 
                                      FontWeight="SemiBold"/>
                            
                            <!-- Grille d'infos -->
                            <Grid ColumnDefinitions="200,*" 
                                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                                
                                <!-- Distribution -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Distribution :" 
                                          FontWeight="Medium"
                                          Foreground="#374151"
                                          Margin="0,0,0,16"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding InfoSysteme.Distribution}"
                                          FontWeight="SemiBold"
                                          Foreground="#111827"
                                          Margin="0,0,0,16"/>
                                
                                <!-- Kernel -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="Kernel :" 
                                          FontWeight="Medium"
                                          Foreground="#374151"
                                          Margin="0,0,0,16"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding InfoSysteme.VersionKernel}"
                                          Foreground="#111827"
                                          Margin="0,0,0,16"/>
                                
                                <!-- Gestionnaire de paquets -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="Gestionnaire :" 
                                          FontWeight="Medium"
                                          Foreground="#374151"
                                          Margin="0,0,0,16"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                          Text="{Binding InfoSysteme.GestionnairePaquets}"
                                          Foreground="#111827"
                                          Margin="0,0,0,16"/>
                                
                                <!-- RAM -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                          Text="MÃ©moire RAM :" 
                                          FontWeight="Medium"
                                          Foreground="#374151"
                                          Margin="0,0,0,16"/>
                                <StackPanel Grid.Row="3" Grid.Column="1" Spacing="8" Margin="0,0,0,16">
                                    <TextBlock>
                                        <Run Text="{Binding InfoSysteme.RamUtiliseeMB, StringFormat={}{0:N0}}"/>
                                        <Run Text=" MB / "/>
                                        <Run Text="{Binding InfoSysteme.RamTotaleMB, StringFormat={}{0:N0}}"/>
                                        <Run Text=" MB "/>
                                        <Run Text="(" FontWeight="SemiBold"/>
                                        <Run Text="{Binding InfoSysteme.PourcentageRam, StringFormat={}{0:F1}}" FontWeight="SemiBold"/>
                                        <Run Text="%)" FontWeight="SemiBold"/>
                                    </TextBlock>
                                    <ProgressBar Value="{Binding InfoSysteme.PourcentageRam}" 
                                                Maximum="100"
                                                Height="8"
                                                Foreground="#3B82F6"/>
                                </StackPanel>
                                
                                <!-- CPU -->
                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                          Text="Utilisation CPU :" 
                                          FontWeight="Medium"
                                          Foreground="#374151"
                                          Margin="0,0,0,16"/>
                                <StackPanel Grid.Row="4" Grid.Column="1" Spacing="8" Margin="0,0,0,16">
                                    <TextBlock>
                                        <Run Text="{Binding InfoSysteme.PourcentageCpu, StringFormat={}{0:F1}}" FontWeight="SemiBold"/>
                                        <Run Text=" %"/>
                                    </TextBlock>
                                    <ProgressBar Value="{Binding InfoSysteme.PourcentageCpu}" 
                                                Maximum="100"
                                                Height="8"
                                                Foreground="#10B981"/>
                                </StackPanel>
                                
                                <!-- Disque -->
                                <TextBlock Grid.Row="5" Grid.Column="0" 
                                          Text="Disque systÃ¨me :" 
                                          FontWeight="Medium"
                                          Foreground="#374151"
                                          Margin="0,0,0,16"/>
                                <StackPanel Grid.Row="5" Grid.Column="1" Spacing="8" Margin="0,0,0,16">
                                    <TextBlock>
                                        <Run Text="{Binding InfoSysteme.PourcentageDisque, StringFormat={}{0:F1}}" FontWeight="SemiBold"/>
                                        <Run Text=" % utilisÃ©"/>
                                    </TextBlock>
                                    <ProgressBar Value="{Binding InfoSysteme.PourcentageDisque}" 
                                                Maximum="100"
                                                Height="8"
                                                Foreground="#F59E0B"/>
                                </StackPanel>
                                
                                <!-- Statut global -->
                                <TextBlock Grid.Row="6" Grid.Column="0" 
                                          Text="Statut global :" 
                                          FontWeight="Medium"
                                          Foreground="#374151"/>
                                <Border Grid.Row="6" Grid.Column="1"
                                       Background="#ECFDF5"
                                       CornerRadius="8"
                                       Padding="12,6"
                                       HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding MessageStatut}" 
                                              FontSize="13"
                                              FontWeight="SemiBold"
                                              Foreground="#065F46"/>
                                </Border>
                                
                            </Grid>
                            
                        </StackPanel>
                    </Border>
                    
                    <!-- Message de bienvenue -->
                    <Border Background="#EFF6FF"
                            CornerRadius="12"
                            Padding="24"
                            BorderBrush="#BFDBFE"
                            BorderThickness="1">
                        <StackPanel Spacing="8">
                            <TextBlock Text="ðŸ‘‹ Bienvenue sur Tuxpilot !" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="#1E40AF"/>
                            <TextBlock Text="Votre assistant Linux est prÃªt Ã  vous aider Ã  maintenir votre systÃ¨me en bonne santÃ©." 
                                      FontSize="14"
                                      Foreground="#1E40AF"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
        </Grid>
        
    </Grid>
</Window>
