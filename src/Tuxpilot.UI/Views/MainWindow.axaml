<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Tuxpilot.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Tuxpilot.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Tuxpilot"
        Width="900" Height="650"
        MinWidth="800" MinHeight="500">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

     <!-- Styles pour les boutons de navigation -->
    <Window.Styles>
        <Style Selector="Button.nav-button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- IMPORTANT : Forcer les couleurs au survol -->
        <Style Selector="Button.nav-button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>
        
        <Style Selector="Button.nav-button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="240,*">
        
        <!-- Sidebar gauche -->
        <Border Grid.Column="0" 
                Background="#FFFFFF"
                BorderBrush="#E5E7EB" 
                BorderThickness="0,0,1,0">
            <StackPanel>
                
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" 
                           Margin="20" 
                           Spacing="12">
                    <TextBlock Text="ðŸ§" FontSize="32"/>
                    <TextBlock Text="TuxCopilot" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#111827"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Menu de navigation -->
                <StackPanel Margin="0,20,0,0" Spacing="4">
                    
                    <Button Content="ðŸ“Š Vue d'ensemble"
                            Classes="nav-button"
                            Command="{Binding NavigateToDashboardCommand}"/>
                    
                    <Button Content="ðŸ”„ Mises Ã  jour"
                            Classes="nav-button"
                            Command="{Binding NavigateToUpdatesCommand}"/>
                    
                    <Button Content="ðŸ§¹ Nettoyage"
                            Classes="nav-button"
                            Command="{Binding NavigateToCleanupCommand}"/>
                    
                    <Button Content="ðŸ©º Diagnostic"
                            Classes="nav-button"
                            Command="{Binding NavigateToDiagnosticCommand}"/>
                    
                </StackPanel>
                
            </StackPanel>
        </Border>
        
        <!-- Contenu principal (UserControl dynamique) -->
        <Border Grid.Column="1" Background="#F9FAFB">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
        
    </Grid>
</Window>