<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ðŸŽ¨ BOUTON PRIMARY (Bleu - Action principale) -->
    <Style Selector="Button.btn-primary">
        <Setter Property="Background" Value="#3B82F6"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#2563EB"/>
    </Style>
    <Style Selector="Button.btn-primary:pointerover">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="Button.btn-primary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#1D4ED8"/>
    </Style>

    <!-- ðŸŽ¨ BOUTON SECONDARY (Gris - Action secondaire) -->
    <Style Selector="Button.btn-secondary">
        <Setter Property="Background" Value="#F3F4F6"/>
        <Setter Property="Foreground" Value="#374151"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#E5E7EB"/>
    </Style>
    <Style Selector="Button.btn-secondary:pointerover">
        <Setter Property="Foreground" Value="#111827"/>
    </Style>
    <Style Selector="Button.btn-secondary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#D1D5DB"/>
    </Style>

    <!-- ðŸŽ¨ BOUTON OUTLINE (Transparent avec bordure) -->
    <Style Selector="Button.btn-outline">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#374151"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D1D5DB"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-outline:pointerover">
        <Setter Property="Background" Value="#F9FAFB"/>
        <Setter Property="BorderBrush" Value="#9CA3AF"/>
    </Style>

    <!-- ðŸŽ¨ BOUTON DANGER (Rouge - Action destructive) -->
    <Style Selector="Button.btn-danger">
        <Setter Property="Background" Value="#EF4444"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#DC2626"/>
    </Style>
    <Style Selector="Button.btn-danger:pointerover">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- ðŸŽ¨ BOUTON SUCCESS (Vert - SuccÃ¨s/Validation) -->
    <Style Selector="Button.btn-success">
        <Setter Property="Background" Value="#10B981"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.btn-success:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#059669"/>
    </Style>
    <Style Selector="Button.btn-success:pointerover">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- ðŸŽ¨ BOUTON SMALL (Variante petite) -->
    <Style Selector="Button.btn-sm">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- ðŸŽ¨ BOUTON LARGE (Variante grande) -->
    <Style Selector="Button.btn-lg">
        <Setter Property="Padding" Value="20,14"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

</Styles>