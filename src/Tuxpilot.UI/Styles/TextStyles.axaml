<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Titres -->
    <Style Selector="TextBlock.text-h1">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
    </Style>

    <Style Selector="TextBlock.text-h2">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
    </Style>

    <Style Selector="TextBlock.text-h3">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
    </Style>

    <!-- Corps de texte -->
    <Style Selector="TextBlock.text-body">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
    </Style>

    <!-- Petits textes -->
    <Style Selector="TextBlock.text-sm">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
    </Style>

    <!-- Texte atténué -->
    <Style Selector="TextBlock.text-muted">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
    </Style>

    <!-- Couleurs contextuelles -->
    <Style Selector="TextBlock.text-info">
        <Setter Property="Foreground" Value="{DynamicResource Info}"/>
    </Style>

    <Style Selector="TextBlock.text-success">
        <Setter Property="Foreground" Value="{DynamicResource Success}"/>
    </Style>

    <Style Selector="TextBlock.text-danger">
        <Setter Property="Foreground" Value="{DynamicResource Danger}"/>
    </Style>

    <Style Selector="TextBlock.text-warning">
        <Setter Property="Foreground" Value="{DynamicResource Warning}"/>
    </Style>

</Styles>